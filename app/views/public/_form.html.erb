<table summary="Ticket form fields">

  <tr>
    <th><%= f.label(:name, "Beer Name") %></th>
	<td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:location, "Location") %></th>
    <td><%= f.text_field(:location) %></td>
  </tr>
  <tr>
    <th><%= f.label(:beer_type, "Beer Type") %></th>
    <td><%= f.text_field(:beer_type) %></td>
  </tr>
  <tr>
    <th><%= f.label(:brewer, "Brewer") %></th>
    <td><%= f.text_field(:brewer) %></td>
  </tr>
  <tr>
    <th><%= f.label(:file, "Image Name") %></th>
    <td><%= f.text_field(:file, :size => "66x2") %></td>
  </tr>
  <tr>
    <th><%= f.label(:level, "Difficulty") %></th>
    <td><%= f.select(:level, [[1],[2],[3],[4],[5]]) %></td>
  </tr>
  <tr>
    <th><%= f.label(:completed) %></th>
    <td><%= f.check_box(:completed) %></td>
  </tr>
  <tr>
    <th><%= f.label(:rating, "Rating") %></th>
    <td><%= f.select(:rating, [[0],[0.5],[1],[1.5],[2],[2.5],[3],[3.5],[4],[4.5],[5],[5.5],[6],[6.5],[7],[7.5],[8],[8.5],[9],[9.5],[10]]) %></td>
  </tr>
  <tr>
    <th><%= f.label(:available, "Available At") %></th>
    <td><%= f.text_field(:available, :size => "66x2") %></td>
  </tr>
  <tr>
    <th><%= f.label(:notes, "Notes") %></th>
    <td><%= f.text_area(:notes, :cols => 48, :rows => 4) %></td>
  </tr>
</table>